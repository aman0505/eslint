// steps of installing eslint 
// 1 npm init 
// 2 npm install eslint --save-dev  (its better to install in dev dependency )
// 3.npm init @eslint/config (to  add configure eslint files )
// 


{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
                // adding rules from eslint documentation 
        // link = https://eslint.org/docs/latest/rules/
        // 
        "plugins":["promise"],
    "rules": {
        "acceptArguments":["warn","double","hyyy"],
        "promise/catch-or-return": "error",
        "comments":["error"],
        "identifier":["warn"],
        "consistent-return":["warn"],
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "off",
            "always"
        ]
    }
}
